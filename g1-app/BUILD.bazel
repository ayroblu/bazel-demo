# bazel run xcodeproj && xed g1-app.xcodeproj
xcodeproj(
    name = "xcodeproj",
    project_name = "g1-app",
    tags = ["manual"],
    top_level_targets = [
        top_level_target(
            ":g1-app",
            target_environments = [
                "device",
                "simulator",
            ],
        ),
        top_level_target(
            ":watch-app",
            target_environments = [
                "device",
                "simulator",
            ],
        ),
    ],
)

setup_sourcekit_bsp(
    name = "setup-bsp",
    bazel_wrapper = "bazelisk",
    files_to_watch = [
        "**/*.swift",
        "**/*.h",
        "**/*.m",
    ],
    index_flags = [
        "config=index_build",
    ],
    targets = [
        "//g1-app",
    ],
)
