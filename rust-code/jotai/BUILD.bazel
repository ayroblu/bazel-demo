load("@rules_rust//rust:defs.bzl", "rust_binary", "rust_library", "rust_test")
load("//tools:rust_uniffi.bzl", "rust_uniffi_bindgen")
load("//tools:rust_wasm.bzl", "rust_wasm_bindgen")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "jotai",
    srcs = ["jotai.rs"],
    deps = [
        "@crates//:parking_lot",
        "@crates//:send_wrapper",
        "@crates//:weak-table",
    ],
)

rust_test(
    name = "jotai-tests",
    crate = ":jotai",
    env = {"RUST_BACKTRACE": "1"},
)

rust_library(
    name = "jotai-llm",
    srcs = ["jotai-llm.rs"],
    deps = ["@crates//:weak-table"],
)

rust_test(
    name = "jotai-llm-tests",
    crate = ":jotai-llm",
)

rust_binary(
    name = "benchmark",
    srcs = ["benchmark.rs"],
)

